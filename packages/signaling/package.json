{
  "name": "signaling",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "USE_HTTPS=false tsx watch src/index.ts",
    "dev:https": "tsx watch src/index.ts",
    "dev:node": "tsx watch src/nodejs/server.ts",
    "dev:worker": "./scripts/dev.sh worker",
    "dev:durable": "./scripts/dev.sh durable",
    "build": "tsc",
    "build:worker": "wrangler deploy --dry-run --outdir dist",
    "start": "node dist/index.js",
    "deploy": "./scripts/deploy.sh",
    "deploy:simple": "./scripts/deploy.sh simple",
    "deploy:durable": "./scripts/deploy.sh durable",
    "deploy:prod": "./scripts/deploy.sh durable production",
    "logs": "./scripts/manage.sh logs",
    "logs:prod": "./scripts/manage.sh logs production",
    "test": "NODE_ENV=test vitest",
    "test:watch": "NODE_ENV=test vitest --watch",
    "test:ui": "vitest --ui",
    "test:api": "./scripts/manage.sh test",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts --out ../../docs/api/signaling",
    "docs:serve": "echo 'API docs available at http://localhost:4000/api-docs when running the server'"
  },
  "dependencies": {
    "cors": "^2.8",
    "dotenv": "^17.1",
    "express": "^5.1",
    "socket.io": "^4.8",
    "uuid": "^11.1"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3",
    "@cloudflare/workers-types": "^4.20250709.0",
    "@eslint/js": "^9.30",
    "@types/cors": "^2.8",
    "@types/express": "^5.0",
    "@types/node": "^24.0",
    "@types/socket.io-client": "^3.0",
    "@types/supertest": "^6.0",
    "@types/swagger-ui-express": "^4.1",
    "@types/uuid": "^10.0",
    "@typescript-eslint/eslint-plugin": "^8.36",
    "@typescript-eslint/parser": "^8.36",
    "@vitest/ui": "^3.2",
    "eslint": "^9.30",
    "miniflare": "^4.20250705.0",
    "socket.io-client": "^4.8",
    "supertest": "^7.1",
    "swagger-ui-express": "^5.0",
    "tsx": "^4.20",
    "typedoc": "^0.28",
    "typescript": "^5.8",
    "vitest": "^3.2",
    "wrangler": "^4.24.0"
  }
}
